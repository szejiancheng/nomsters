{
  "expo": {
    "name": "Nomsters",
    "slug": "Nomsters",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo/logo_hollow.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo/logo_white.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to allow you to take pictures of your food."
      },
      "bundleIdentifier": "com.jakobyoong.Nomsters"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "89366c4b-81f2-4203-b2a5-a0cbe6a06937"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/89366c4b-81f2-4203-b2a5-a0cbe6a06937"
    }
  }
}
